<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-30dp"
    android:orientation="vertical"
    tools:context=".Login">

        <ImageView
            android:id="@+id/ivElipse1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/login_elipse1"/>

        <ImageView
            android:id="@+id/ivElipse2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/login_elipse2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login here"
            android:textAlignment="center"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="#1F41BB"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="148dp" />

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="Welcome back youâ€™ve been missed!"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="219dp" />

        <EditText
            android:id="@+id/Login_Email"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="387dp"
            android:background="@drawable/custom_edittext"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:singleLine="true" />

        <EditText
            android:id="@+id/Login_Password"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_marginTop="474dp"
            android:background="@drawable/custom_edittext"
            android:clickable="true"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:padding="10dp"
            android:password="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true" />

        <Button
            android:id="@+id/Login_button"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Icon.Primary"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="580dp"
            android:backgroundTint="@color/primary_color"
            android:text="Login"
            android:textColor="#FFF"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/LoginRedirectText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="659dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="Don't have an account, Register Here!"
            android:layout_centerHorizontal="true"
            android:textSize="18sp" />

</RelativeLayout>